#!/usr/bin/env ruby

require 'released'
require 'yaml'

opts, args = ARGV.partition { |a| a.start_with?('-') }

if args.size != 1
  $stderr.puts "usage: #{$PROGRAM_NAME} [options] filename"
  exit 1
end

dry_run = opts.include?('--dry-run')

stages = Released::PipelineReader.new(args[0]).read
Released::Runner.new(stages, dry_run: dry_run).run
